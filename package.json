    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "postinstall": "prisma generate --schema=prisma/schema.prisma",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:changed": "./scripts/utils/lint-changed.sh",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && tsc --noEmit && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "db:seed": "tsx prisma/seed.ts",
    "db:push": "./scripts/db-safe.sh db push",
    "db:push:force": "./scripts/db-safe.sh db push --force-reset",
    "db:studio": "npx prisma studio",
    "db:validate": "npx prisma validate",
    "db:backup": "./scripts/db-backup.sh",
    "db:restore": "./scripts/db-restore.sh",
