    "audit:fix": "./scripts/utils/audit-deps.sh fix",
    "audit:report": "./scripts/utils/audit-deps.sh report",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "echo 'Skipping husky in CI. Run npm run prepare-local for git hooks.'",
    "prepare-local": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
